<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/detailID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/detailImageID"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="16dp"
            android:scaleType="centerInside"
            android:background="@color/colorAccent"/>
        <TextView
            android:id="@+id/descriptionID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="15sp"
            android:text="Cool"
            android:layout_marginTop="33dp"
            android:layout_below="@id/detailImageID"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:id="@+id/priceLayoutID"
            android:layout_below="@id/descriptionID">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="PRICE"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:hint="PRICE"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:id="@+id/priceID"/>


            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/quantityID"
            android:orientation="vertical"
            android:layout_below="@id/priceLayoutID"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/quantitylevelID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/dcrement_ButtonID"
                    android:text="-"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/quantity_textID"
                    android:layout_gravity="center"
                    android:text="1"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp"
                    android:textSize="22sp"/>

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/increment_ButtonID"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="+"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/quantitytotalID"
            android:orientation="horizontal"
            android:layout_below="@id/quantityID">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Total"
                android:gravity="center"
                android:id="@+id/totalID"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="total"
                android:id="@+id/total_costID"/>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cart_buttonID"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/quantitytotalID"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="ADD TO CART"/>

    </RelativeLayout>



</ScrollView>